$cols = 12
$gutter = 24px

.container
  width: 750px

.col
  padding: 0 ($gutter / 2)
  margin-bottom: $gutter

for offset in 0..($cols - 1)
  .offset-m-{offset}
    margin-left: ( 100% / $cols ) * offset

for col in 1..$cols
  .col-m-{col}
    flex-basis: ( 100% / $cols ) * col
    max-width: ( 100% / $cols ) * col

// ******************************************************

// VARIABLES

$golden-ratio = 1.61803398875

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-micro = ($gutter / (2 * $golden-ratio))
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-small = 12px
$font-size-basic = 15px
$font-size-mid = 17px
$font-size-large = 21px
$font-size-extra = 32px
// ******************************************************

// TYPOGRAPHY

html
  font-size: $font-size-basic
  letter-spacing: $font-tracking-basic

body
  line-height: $font-leading-basic

  // HTML ELEMENT STYLING

.font-size-small
  font-size: $font-size-small

.font-size-basic
  font-size: $font-size-basic

.font-size-mid
  font-size: $font-size-mid

.font-size-large
  font-size: $font-size-large

.font-size-extra
  font-size: $font-size-extra

// ******************************************************

// BASIC

$header-height = 65px
$footer-height = 44px

.only-mobile
  display: none

.only-desktop
  display: initial

.pagination-button
  padding-left: $margin-small

// ******************************************************

// MARGINS AND PADDING

  // MARGIN TOP

.margin-top-micro
  margin-top: $margin-micro

.margin-top-tiny
  margin-top: $margin-tiny

.margin-top-small
  margin-top: $margin-small

.margin-top-basic
  margin-top: $margin-basic

.margin-top-mid
  margin-top: $margin-mid

.margin-top-large
  margin-top: $margin-large

  // MARGIN BOTTOM

.margin-bottom-micro
  margin-bottom: $margin-micro

.margin-bottom-tiny
  margin-bottom: $margin-tiny

.margin-bottom-small
  margin-bottom: $margin-small

.margin-bottom-basic
  margin-bottom: $margin-basic

.margin-bottom-mid
  margin-bottom: $margin-mid

.margin-bottom-large
  margin-bottom: $margin-large

  // PADDING TOP

.padding-top-micro
  padding-top: $margin-micro

.padding-top-tiny
  padding-top: $margin-tiny

.padding-top-small
  padding-top: $margin-small

.padding-top-basic
  padding-top: $margin-basic

.padding-top-mid
  padding-top: $margin-mid

.padding-top-large
  padding-top: $margin-large

  // PADDING BOTTOM

.padding-bottom-micro
  padding-bottom: $margin-micro

.padding-bottom-tiny
  padding-bottom: $margin-tiny

.padding-bottom-small
  padding-bottom: $margin-small

.padding-bottom-basic
  padding-bottom: $margin-basic

.padding-bottom-mid
  padding-bottom: $margin-mid

.padding-bottom-large
  padding-bottom: $margin-large

// ******************************************************

// SPLASH

.splash-nav
  font-size: 18px
  
// ******************************************************

// HEADER

#header
  text-align: left

.editorial-title
  text-align: right
  
.header-cart
  justify-content: flex-end
  img
    width: $margin-small
    margin-right: $margin-micro
    
.header-editorial-title
  text-align: right

// ******************************************************

// ARCHIVE EDITORIAL

#archive-editorial-titles
  margin-left: $margin-basic

#archive-editorial-images
  display: flex

.archive-editorial-image
  &:not(:first-of-type)
    display: none

// ******************************************************

// SINGLE EDITORIAL

.set-swiper-height
  height: calc('100vh - ' + ($header-height + $footer-height))
  
.slider-product-details
  display: none
    
// ******************************************************

// PRODUCT ARCHIVE

.shop-product-title
  margin: $margin-basic $margin-tiny

.shop-product-sold
  left: $margin-tiny
  padding: $margin-tiny
  
// ******************************************************

// WOO CART

.woocommerce table.shop_table td
  padding: $margin-tiny

.woocommerce-cart table.cart td.actions .coupon .input-text
  width: auto

.woocommerce .cart-collaterals .cart_totals, .woocommerce-page .cart-collaterals .cart_totals
  width: 35%