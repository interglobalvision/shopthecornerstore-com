// ******************************************************

// SPLASH

.splash-nav
  font-size: 18px
  
// ******************************************************

// HEADER

#header
  text-align: left
  
.menu-item
  margin-right: $margin-tiny

.editorial-title
  text-align: right
  
.header-cart
  justify-content: flex-end
  img
    width: $margin-small
    margin-right: $margin-micro

// ******************************************************

// ARCHIVE EDITORIAL

#archive-editorial-titles
  margin-left: $margin-basic

#archive-editorial-images
  display: flex

.archive-editorial-image
  &:not(:first-of-type)
    display: none

// ******************************************************

// SINGLE EDITORIAL

.set-swiper-height
  height: calc('100vh - ' + ($header-height + $footer-height))
 
body.single-editorial 
  .slider-product-details
    display: none
    
// ******************************************************

// PRODUCT ARCHIVE

.shop-product-title
  margin: $margin-basic $margin-tiny $margin-basic

.shop-product-sold
  left: $margin-tiny
  padding: $margin-tiny
  
