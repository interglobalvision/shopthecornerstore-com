$cols = 12
$gutter = 32px

.container
  width: 1150px

.col
  padding: 0 ($gutter / 2)
  margin-bottom: $gutter
  
.table-row .col
  margin: ($gutter / 2) 0 

for offset in 0..($cols - 1)
  .offset-l-{offset}
    margin-left: ( 100% / $cols ) * offset

for col in 1..$cols
  .col-l-{col}
    flex-basis: ( 100% / $cols ) * col
    max-width: ( 100% / $cols ) * col

// ******************************************************

// VARIABLES

$golden-ratio = 1.61803398875

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-micro = ($gutter / (2 * $golden-ratio))
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

// ******************************************************

// TYPOGRAPHY

.font-nav 
  font-size: 13px   
  
.font-nav-splash
  font-size: 21px 

// PRODUCT FONT 

.font-product-title 
  font-size: 19px   
  
.font-product-content 
  font-size: 17px
  
.font-product-attr
  font-size: 12px
  
.font-product-price
  font-size: 14px

// SHOP FONT 

