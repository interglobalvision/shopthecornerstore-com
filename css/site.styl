@import "kouto-swiss"
@import "helpers"
@import "swiper"
@import "fonts"

// ******************************************************

// FONTS

// ******************************************************

// ICONS FONTS

// ** https://genericons.com WP icon font set
// @import "fonts/icons/genericons"

// ** minimal version of Google Materialize UI icons. check the styl for usage
@import "fonts/icons/materialize-min"

// ** full set of Google Materialize. https://design.google.com/icons/
// @import "fonts/icons/materialize"

// ******************************************************

meyer-reset()
box-sizing-reset()
normalize()

// ******************************************************

// GRID

$cols = 12
$gutter = 14px

.container
  margin: 0 auto
  width: 96%

.row
  box-sizing: border-box
  display: flex
  flex: 0 1 auto
  flex-direction: row
  flex-wrap: wrap
  &.reverse
    flex-direction: row-reverse
    
.column
  box-sizing: border-box
  display: flex
  flex: 0 1 auto
  flex-direction: column
  &.reverse
    flex-direction: column-reverse

.u-flex
  display: flex

// FLEX POSITIONING

.justify-start
  justify-content: flex-start

.justify-center
  justify-content: center

.justify-end
  justify-content: flex-end
  
.justify-between
  justify-content: space-between

.align-start
  align-items: flex-start

.align-center
  align-items: center

.align-end
  align-items: flex-end

.align-content-start
  align-content: flex-start

.align-content-center
  align-content: center

.align-content-end
  align-content: flex-end

// COLUMN SIZES & OFFSETS

.col
  flex: 0 1 auto
  box-sizing: border-box
  max-width: 100%
  padding: 0 ($gutter / 2)
  margin-bottom: $gutter
  
.col.col-no-margin-bottom
  margin-bottom: 0

.col.col-no-gutter
  padding-left: 0
  padding-right: 0

for offset in 0..($cols - 1)
  .offset-s-{offset}
    margin-left: ( 100% / $cols ) * offset

for col in 1..$cols
  .col-s-{col}
    flex-basis: ( 100% / $cols ) * col
    max-width: ( 100% / $cols ) * col

// ******************************************************

// VARIABLES

$golden-ratio = 1.61803398875

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-micro = ($gutter / (2 * $golden-ratio))
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-small = 10px
$font-size-basic = 12px
$font-size-mid = 14px
$font-size-large = 16px
$font-size-extra = 18px

$font-leading-basic = 1.35
$font-leading-tighter = 1.15
$font-leading-larger = 1.45

$font-tracking-basic = 0.001em
$font-tracking-wider = 0.05em

$color-black-soft = rgb(14, 14, 14)
$color-white = rgb(255, 255, 255)
$color-grey = #B7B7B7

$border-width = 2px

$speed-transition-fast = .1s

// ******************************************************

// TYPOGRAPHY

html
  font-family: "Montserrat", font-stack('Helvetica')
  font-size: $font-size-basic
  letter-spacing: $font-tracking-basic
  text-transform: uppercase

body
  line-height: $font-leading-basic
  
h1,h2,h3,h4,h5
  margin: 0

  // HTML ELEMENT STYLING
.font-size-small
  font-size: $font-size-small

.font-size-basic
  font-size: $font-size-basic

.font-size-mid
  font-size: $font-size-mid

.font-size-large
  font-size: $font-size-large

.font-size-extra
  font-size: $font-size-extra

p
  margin-bottom: 1rem

  // FONT RULES

.font-serif
  font-family: 'Crimson Text', font-stack('Georgia')

.font-italic
  font-style: italic

.font-bold
  font-weight: bold

.font-small-caps
  font-size: 0.85em
  text-transform: uppercase

.font-uppercase
  text-transform: uppercase

.font-capitalize
  text-transform: capitalize
  
.font-transform-none
  text-transform: none

.font-letter-spaced
  letter-spacing: .1em
  
.font-leading-larger
  line-height: $font-leading-larger

  // TEXT RULES

.text-overflow-ellipsis
  overflow: ellipsis

.text-align-left
  text-align: left

.text-align-right
  text-align: right

.text-align-center
  text-align: center

  // LINKS

a,
a:active,
a:visited
  color: inherit
  text-decoration: none

p 
  a,
  a:active,
  a:visited
    text-decoration: none

// ******************************************************

// BASIC

html
  background-color: $color-white
  color: $color-black-soft

img
  max-width: 100%
  height: auto

.pagination-button
  padding-left: $margin-small

$header-height = 114
$footer-height = 32
  
.product-content 
  p
    line-height: 2
  p:last-of-type
    margin-bottom: 0
  

// ******************************************************

// MARGINS AND PADDING

  // MARGIN TOP

.margin-top-micro
  margin-top: $margin-micro

.margin-top-tiny
  margin-top: $margin-tiny

.margin-top-small
  margin-top: $margin-small

.margin-top-basic
  margin-top: $margin-basic

.margin-top-mid
  margin-top: $margin-mid

.margin-top-large
  margin-top: $margin-large

  // MARGIN BOTTOM

.margin-bottom-micro
  margin-bottom: $margin-micro

.margin-bottom-tiny
  margin-bottom: $margin-tiny

.margin-bottom-small
  margin-bottom: $margin-small

.margin-bottom-basic
  margin-bottom: $margin-basic

.margin-bottom-mid
  margin-bottom: $margin-mid

.margin-bottom-large
  margin-bottom: $margin-large

  // PADDING TOP

.padding-top-micro
  padding-top: $margin-micro

.padding-top-tiny
  padding-top: $margin-tiny

.padding-top-small
  padding-top: $margin-small

.padding-top-basic
  padding-top: $margin-basic

.padding-top-mid
  padding-top: $margin-mid

.padding-top-large
  padding-top: $margin-large

  // PADDING BOTTOM

.padding-bottom-micro
  padding-bottom: $margin-micro

.padding-bottom-tiny
  padding-bottom: $margin-tiny

.padding-bottom-small
  padding-bottom: $margin-small

.padding-bottom-basic
  padding-bottom: $margin-basic

.padding-bottom-mid
  padding-bottom: $margin-mid

.padding-bottom-large
  padding-bottom: $margin-large

// ******************************************************

// SPLASH

.splash-container
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0
  display: flex
  justify-content: center
  flex-direction: column

.splash-swiper
  position: fixed !important
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: -9999

.splash-slide
  background-size: cover
  background-position: center
  background-repeat: no-repeat
  
.splash-header
  position: absolute
  width: 100%
  bottom: 20%

.splash-logo
  fill: $color-white
  svg
    width: 100%

.splash-nav
  font-size: $font-size-basic
  ul 
    display: flex
    flex-direction: row
    justify-content: space-between 

// ******************************************************

// HEADER

.menu-item
  margin: 0 $margin-tiny
  a:hover
    color: $color-grey
  
.header-cart
  display: flex
  justify-content: center
  align-items: center
  img
    width: $margin-small
    height: auto
    margin-right: $margin-micro

#searchform
  input
    appearance: none
    border: 0
    background: none
    &:focus
      outline: none
  
#header-logo 
  text-align: center
  svg 
    width: 200px
  .logo-path
    fill: $color-black-soft

// ******************************************************

// PRODUCT ARCHIVE

.shop-product
  position: relative
  img
    display: block
    width: 100%
  &:hover
    .shop-product-title-holder, .shop-product-sold-text
      opacity: 1

.shop-product-title-holder
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 50
  display: flex;
  align-items: flex-end;
  justify-content: center;
  background-color: rgba(255, 255, 255, .5)
  opacity: 0
  transition: opacity $speed-transition-fast

.shop-product-title
  margin: $margin-basic $margin-tiny

.shop-product-sold
  position: absolute
  top: 0
  left: $margin-tiny
  padding: $margin-small
  color: $color-white

img.shop-product-sold-icon
  width: auto
  height: 18px
  display: inline-block

.shop-product-sold-text
  opacity: 0
  transition: opacity $speed-transition-fast

// ******************************************************

// WOO BUTTONS

.woocommerce #respond input#submit, .woocommerce a.button, .woocommerce button.button, .woocommerce input.button
  font-weight: normal

// ******************************************************

// WOO MESSAGES

.woocommerce-message, .woocommerce-info
  border-top: none

// ******************************************************

// WOO CART

.cross-sells
  display: none

.woocommerce table.shop_table td
  padding: $margin-tiny

.woocommerce .cart-collaterals .cart_totals, .woocommerce-page .cart-collaterals .cart_totals
  width: 100%

.woocommerce a.remove
  color: $color-black-soft !important

.woocommerce a.remove:hover
  color: $color-black-soft !important
  background: transparent

#add_payment_method table.cart img, .woocommerce-cart table.cart img, .woocommerce-checkout table.cart img
  width: 100px

// ******************************************************

// ARCHIVE EDITORIAL

#archive-editorial-titles
  margin-left: $margin-basic

// ******************************************************

// SINGLE EDITORIAL

.slide-column
  height: 100%
  display: flex
  flex-direction: column
  img 
    max-height: 100%
    width: auto
    
.slider-pagination-holder
  flex-grow: 1
  
.slider-button
  background: transparent
  border: none
  width: 30px
  height: 30px
  -webkit-appearance: none
  padding: 0
  svg 
    width: 100%
    height: 100%
    path 
      fill: $color-black-soft
  &:focus
    outline: none

// ******************************************************

// FOOTER

.social-icon
  width: 20px
  margin-right: $margin-tiny

.post-date
  display: inline-block
  color: $color-grey
  border-bottom: $border-width solid $color-grey


// ******************************************************

// MEDIA QUERIES

.only-mobile
  display: initial

.only-desktop
  display: none

@media screen and (min-width: 750px)

  @import "responsive/tablet"

@media screen and (min-width: 1150px)

  .only-mobile
    display: none

  .only-desktop
    display: initial

  @import "responsive/laptop"

@media screen and (min-width: 1320px)

  @import "responsive/desktop"
